---
interface Props {
  id?: string;
  href: string;
  isCopy?: boolean;
}

const { isCopy } = Astro.props;
---

{
  isCopy ? (
    <button
      class={`
          bg-white/5
          border border-white/10 rounded-full 
          flex justify-center items-center gap-x-2 
          py-1 px-2 md:py-2 md:px-4
          text-xs md:text-base
          transition
          hover:scale-110 hover:bg-white/10
      `}
      onclick="navigator.clipboard.writeText('sansanfleitas@gmail.com');"
    >
      <slot />
    </button>
  ) : (
    <a
      class={`
          bg-white/5
          border border-white/10 rounded-full 
          flex justify-center items-center gap-x-2 
          py-1 px-2 md:py-2 md:px-4
          text-xs md:text-base
          transition
          hover:scale-110 hover:bg-white/10
      `}
      {...Astro.props}
      target="_blank"
      rel="noopener noreferrer"
    >
      <slot />
    </a>
  )
}
